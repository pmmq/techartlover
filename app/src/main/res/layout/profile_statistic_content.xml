<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--engagement-->
        <LinearLayout
            android:layout_weight=".33"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                tools:text="1050"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tv_engagement"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black" />
            <TextView
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="ENGAGEMENT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--followers-->
        <LinearLayout
            android:layout_weight=".33"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                tools:text="6942"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tv_followers"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black" />
            <TextView
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="FLOOWERS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--expert in-->
        <LinearLayout
            android:layout_weight=".33"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                tools:text="1050"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tv_expertin"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black" />
            <TextView
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="EXPERT IN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--left padding-->
        <LinearLayout
            android:layout_weight=".45"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>

        <LinearLayout
            android:layout_weight=".1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--compatibility-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <interview.pub.com.techartlover.view.HeartCircularProgress
                    android:id="@+id/progress_circular_heart"
                    custom:donut_finished_color="#f93340"
                    custom:donut_unfinished_color="#50000000"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="bottom"
                            tools:text="8"
                            android:includeFontPadding="false"
                            android:textSize="50sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textAlignment="gravity"
                            android:layout_margin="0dp" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp">

                            <TextView
                                tools:text=".5"
                                android:includeFontPadding="false"
                                android:textSize="35sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:layout_margin="0dp" />

                            <TextView
                                android:text="COMPATIBILITY"
                                android:textSize="15sp"
                                android:includeFontPadding="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:layout_margin="0dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            tools:text="34"
                            android:textSize="25sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:text="SHARED MOVIE"
                                android:textSize="12.5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:layout_weight=".6"
                                android:text="EXPERIENCES"
                                android:textSize="12.5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:background="@color/colorLightGreen"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_correct"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
                <TextView
                    android:textSize="12sp"
                    android:text="FLOLLOWING"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!--right padding-->
        <LinearLayout
            android:layout_weight=".45"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>

    </LinearLayout>


</LinearLayout>